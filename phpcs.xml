<?xml version="1.0"?>
<ruleset name="CAH Coding Standard">
    <description>Coding standard for Cards API Hub clone</description>

    <!-- What to scan -->
    <file>src</file>
    <file>api</file>
    
    <!-- Exclude patterns -->
    <exclude-pattern>*/Database/migrations/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12">
        <!-- Allow spaces after opening parenthesis with ! operator (user preference for "( !" style) -->
        <exclude name="PSR12.ControlStructures.ControlStructureSpacing.SpacingAfterOpenBrace"/>
        <exclude name="Generic.Formatting.SpaceAfterNot"/>
    </rule>
    
    <!-- Allow user's preferred spacing style: ( ! instead of (!-->
    <rule ref="Squiz.WhiteSpace.OperatorSpacing">
        <properties>
            <property name="ignoreNewlines" value="true"/>
        </properties>
    </rule>
    <rule ref="Generic.WhiteSpace.ArbitraryParenthesesSpacing">
        <properties>
            <property name="spacing" value="1"/>
            <property name="ignoreNewlines" value="true"/>
        </properties>
    </rule>

    <!-- Additional rules -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Generic.CodeAnalysis.EmptyStatement"/>
    <rule ref="Generic.CodeAnalysis.UnconditionalIfStatement"/>
    <rule ref="Generic.CodeAnalysis.UnnecessaryFinalModifier"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>
    <rule ref="Generic.Metrics.CyclomaticComplexity">
        <properties>
            <property name="complexity" value="15"/>
        </properties>
    </rule>
    <rule ref="Generic.Metrics.NestingLevel">
        <properties>
            <property name="nestingLevel" value="5"/>
        </properties>
    </rule>
    
    <!-- Show progress and use colors -->
    <arg value="p"/>
    <arg name="colors"/>
    
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
</ruleset>
